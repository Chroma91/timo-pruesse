{
	"name": "timo-pruesse",
	"version": "2.1.0",
	"engines": {
		"node": "17"
	},
	"scripts": {
		"dev:only": "svelte-kit dev",
		"build:only": "svelte-kit build",
		"preview": "svelte-kit preview",
		"tailwind:watch": "TAILWIND_MODE=watch NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/generated/main.css -w",
		"tailwind:build": "TAILWIND_MODE=build NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/generated/main.css",
		"dev": "concurrently \"npm run dev:only\" \"npm run tailwind:watch\"",
		"build": "npm run tailwind:build && npm run build:only",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"autoprefixer": "^10.4.5",
		"concurrently": "^7.1.0",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"node-sass": "^7.0.1",
		"postcss-cli": "^9.1.0",
		"prettier": "~2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.50.1",
		"svelte": "^3.47.0",
		"svelte-check": "^2.7.0",
		"svelte-preprocess": "^4.10.6",
		"tailwindcss": "^3.0.24",
		"tslib": "^2.4.0",
		"typescript": "^4.6.3",
		"vite-plugin-wasm-pack": "^0.1.11"
	},
	"type": "module",
	"dependencies": {
		"timo_pruesse_wasm_terminal": "^1.3.3"
	}
}
